<script>
    function toggleMenu() { document.body.classList.toggle('nav-open'); }

    function updateLabels(suffix) {
        const tipo = document.getElementById('tipo' + suffix).value;
        const labelCons = document.getElementById('labelCons' + suffix);
        const labelPrezzo = document.getElementById('labelPrezzo' + suffix);
        
        if (tipo === 'Elettrica') {
            labelCons.innerText = 'Consumo (kWh/100km)';
            labelPrezzo.innerText = 'Prezzo (‚Ç¨/kWh)';
        } else {
            labelCons.innerText = 'Consumo (Litri/100km)';
            labelPrezzo.innerText = 'Prezzo (‚Ç¨/Litro)';
        }
    }

    function setPrice(suffix, val) {
        document.getElementById('prezzo' + suffix).value = val;
    }

    function calcola() {
        if (!document.getElementById('legalAccept').checked) {
            alert("Per favore, accetta le note legali prima di procedere.");
            return;
        }

        const km = parseFloat(document.getElementById('kmTot').value);
        const consA = parseFloat(document.getElementById('consA').value);
        const prA = parseFloat(document.getElementById('prezzoA').value);
        const consB = parseFloat(document.getElementById('consB').value);
        const prB = parseFloat(document.getElementById('prezzoB').value);

        if (isNaN(km) || isNaN(consA) || isNaN(prA) || isNaN(consB) || isNaN(prB)) {
            alert("Inserisci tutti i valori numerici correttamente.");
            return;
        }

        const costo100A = consA * prA;
        const costoAnnoA = (costo100A / 100) * km;
        const costo100B = consB * prB;
        const costoAnnoB = (costo100B / 100) * km;
        
        const risparmio = costoAnnoA - costoAnnoB;
        const resultBox = document.getElementById('resultBox');
        
        // Calcolo larghezza barre
        const maxCosto = Math.max(costoAnnoA, costoAnnoB);
        const widthA = (costoAnnoA / maxCosto) * 100;
        const widthB = (costoAnnoB / maxCosto) * 100;

        resultBox.innerHTML = `
            <h3>üìä Risultato del Confronto</h3>
            <p>Costo annuo stimato per <strong>${km.toLocaleString()} km</strong>:</p>
            
            <div style="margin-bottom:15px">
                <strong>Auto A: ${costoAnnoA.toFixed(2)} ‚Ç¨</strong>
                <div class="bar-container"><div class="bar-fill" style="width:${widthA}%"></div></div>
            </div>

            <div style="margin-bottom:15px">
                <strong>Auto B: ${costoAnnoB.toFixed(2)} ‚Ç¨</strong>
                <div class="bar-container"><div class="bar-fill" style="width:${widthB}%"></div></div>
            </div>

            <div style="background:#e8f5e9; padding:15px; border-radius:8px; border:1px solid #c8e6c9;">
                <h4 style="margin:0; color:#2e7d32;">
                    ${risparmio > 0 ? 'Auto B ti fa risparmiare ' + risparmio.toFixed(2) + ' ‚Ç¨/anno' : 'Auto A ti fa risparmiare ' + Math.abs(risparmio).toFixed(2) + ' ‚Ç¨/anno'}
                </h4>
                <p style="margin:5px 0 0 0; font-size:0.9rem;">Risparmio mensile: <strong>${Math.abs(risparmio/12).toFixed(2)} ‚Ç¨</strong></p>
            </div>
        `;
        resultBox.style.display = 'block';
        resultBox.scrollIntoView({ behavior: 'smooth' });
    }

    // Cookie Logic
    function acceptCookies() { localStorage.setItem('consent', 'yes'); document.getElementById('cookie-banner').style.display = 'none'; }
    function rejectCookies() { localStorage.setItem('consent', 'no'); document.getElementById('cookie-banner').style.display = 'none'; }
    window.onload = () => { if(!localStorage.getItem('consent')) document.getElementById('cookie-banner').style.display = 'block'; }
</script>

