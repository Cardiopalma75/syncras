  <script>
    // =========================
    // Helpers
    // =========================
    function checkLegalAccept() {
      const cb = document.getElementById('legalAccept');
      if (cb && !cb.checked) {
        alert('Per usare questi calcolatori devi dichiarare di aver letto e accettato le Note Legali.');
        return false;
      }
      return true;
    }

    function euro(v) {
      // formato "12,34 €"
      const n = Number(v);
      if (!isFinite(n)) return '—';
      return n.toFixed(2).replace('.', ',') + ' €';
    }

    function showResult(id, html) {
      const div = document.getElementById(id);
      div.innerHTML = html;
      div.style.display = 'block';
    }

    // =========================
    // STUFETTA
    // =========================
    function calcolaStufetta() {
      if (!checkLegalAccept()) return;

      const watt = parseFloat(document.getElementById('stufettaWatt').value) || 0;
      const ore = parseFloat(document.getElementById('stufettaOre').value) || 0;
      const giorni = parseFloat(document.getElementById('stufettaGiorni').value) || 0;
      const prezzo = parseFloat(document.getElementById('stufettaPrezzo').value) || 0;

      const kWhOra = watt / 1000;
      const costoOra = kWhOra * prezzo;
      const costoGiorno = costoOra * ore;
      const costoMese = costoGiorno * giorni;

      showResult('stufettaResult', `
        <strong>Risultato stimato:</strong><br>
        • Consumo orario: <strong>${kWhOra.toFixed(2)} kWh</strong><br>
        • Costo per 1 ora: <strong>${euro(costoOra)}</strong><br>
        • Costo giornaliero (${ore} h): <strong>${euro(costoGiorno)}</strong><br>
        • Costo mensile (${giorni} giorni): <strong>${euro(costoMese)}</strong>
      `);
    }

    // =========================
    // TV
    // =========================
    function calcolaTV() {
      if (!checkLegalAccept()) return;

      const wattBase = parseFloat(document.getElementById('tvWatt').value) || 0;
      const ore = parseFloat(document.getElementById('tvHours').value) || 0;
      const prezzo = parseFloat(document.getElementById('tvPrice').value) || 0;
      const tipo = parseFloat(document.getElementById('tvType').value) || 1;

      const wattReali = wattBase * tipo;
      const kWhOra = wattReali / 1000;
      const costoOra = kWhOra * prezzo;
      const costoGiorno = costoOra * ore;
      const costoMese = costoGiorno * 30;
      const costoAnno = costoGiorno * 365;

      showResult('tvResult', `
        <strong>Potenza reale stimata:</strong> ${wattReali.toFixed(0)} W<br>
        • Consumo orario: <strong>${kWhOra.toFixed(2)} kWh</strong><br>
        • Costo per 1 ora: <strong>${euro(costoOra)}</strong><br>
        • Spesa mensile (~30 giorni): <strong>${euro(costoMese)}</strong><br>
        • Spesa annua (~365 giorni): <strong>${euro(costoAnno)}</strong>
      `);
    }

    // =========================
    // LAVATRICE
    // =========================
    function calcolaLavatrice() {
      if (!checkLegalAccept()) return;

      const ciclo = parseFloat(document.getElementById('lavCiclo').value) || 0;
      const fattore = parseFloat(document.getElementById('lavTemp').value) || 1;
      const lavSettimana = parseFloat(document.getElementById('lavSettimana').value) || 0;
      const prezzo = parseFloat(document.getElementById('lavPrezzo').value) || 0;

      const kWhReali = ciclo * fattore;
      const costoCiclo = kWhReali * prezzo;
      const lavMese = lavSettimana * 4;
      const costoMese = costoCiclo * lavMese;
      const costoAnno = costoCiclo * lavSettimana * 52;

      showResult('lavResult', `
        <strong>Consumo stimato per ciclo:</strong> ${kWhReali.toFixed(2)} kWh<br>
        • Costo per 1 lavaggio: <strong>${euro(costoCiclo)}</strong><br>
        • Lavaggi mensili (~${lavMese}): <strong>${euro(costoMese)}</strong><br>
        • Spesa annua (~${lavSettimana} lavaggi/settimana): <strong>${euro(costoAnno)}</strong>
      `);
    }

    // =========================
    // FORNO
    // =========================
    function calcolaForno() {
      if (!checkLegalAccept()) return;

      const watt = parseFloat(document.getElementById('fornoWatt').value) || 0;
      const ore = parseFloat(document.getElementById('fornoOre').value) || 0;
      const cottureSettimana = parseFloat(document.getElementById('fornoSettimana').value) || 0;
      const prezzo = parseFloat(document.getElementById('fornoPrezzo').value) || 0;

      const kWhUso = (watt / 1000) * ore * 0.7; // fattore 0.7: non sempre al massimo
      const costoUso = kWhUso * prezzo;
      const cottureMese = cottureSettimana * 4;
      const costoMese = costoUso * cottureMese;
      const costoAnno = costoUso * cottureSettimana * 52;

      showResult('fornoResult', `
        <strong>Consumo medio per cottura:</strong> ${kWhUso.toFixed(2)} kWh<br>
        • Costo per 1 utilizzo: <strong>${euro(costoUso)}</strong><br>
        • Spesa mensile (~${cottureMese} cotture): <strong>${euro(costoMese)}</strong><br>
        • Spesa annua (~${cottureSettimana} cotture/settimana): <strong>${euro(costoAnno)}</strong>
      `);
    }

    // =========================
    // LAVASTOVIGLIE
    // =========================
    function calcolaLavastoviglie() {
      if (!checkLegalAccept()) return;

      const ciclo = parseFloat(document.getElementById('lavaCiclo').value) || 0;
      const fattore = parseFloat(document.getElementById('lavaProg').value) || 1;
      const cicliSettimana = parseFloat(document.getElementById('lavaSettimana').value) || 0;
      const prezzo = parseFloat(document.getElementById('lavaPrezzo').value) || 0;

      const kWhReali = ciclo * fattore;
      const costoCiclo = kWhReali * prezzo;
      const cicliMese = cicliSettimana * 4;
      const costoMese = costoCiclo * cicliMese;
      const costoAnno = costoCiclo * cicliSettimana * 52;

      showResult('lavaResult', `
        <strong>Consumo stimato per ciclo:</strong> ${kWhReali.toFixed(2)} kWh<br>
        • Costo per 1 ciclo: <strong>${euro(costoCiclo)}</strong><br>
        • Spesa mensile (~${cicliMese} cicli): <strong>${euro(costoMese)}</strong><br>
        • Spesa annua (~${cicliSettimana} cicli/settimana): <strong>${euro(costoAnno)}</strong>
      `);
    }

    // =========================
    // ASCIUGATRICE
    // =========================
    function calcolaAsciugatrice() {
      if (!checkLegalAccept()) return;

      const ciclo = parseFloat(document.getElementById('asciCiclo').value) || 0;
      const fattore = parseFloat(document.getElementById('asciTipo').value) || 1;
      const cicliSettimana = parseFloat(document.getElementById('asciSettimana').value) || 0;
      const prezzo = parseFloat(document.getElementById('asciPrezzo').value) || 0;

      const kWhReali = ciclo * fattore;
      const costoCiclo = kWhReali * prezzo;
      const cicliMese = cicliSettimana * 4;
      const costoMese = costoCiclo * cicliMese;
      const costoAnno = costoCiclo * cicliSettimana * 52;

      showResult('asciResult', `
        <strong>Consumo stimato per ciclo:</strong> ${kWhReali.toFixed(2)} kWh<br>
        • Costo per 1 ciclo: <strong>${euro(costoCiclo)}</strong><br>
        • Spesa mensile (~${cicliMese} cicli): <strong>${euro(costoMese)}</strong><br>
        • Spesa annua (~${cicliSettimana} cicli/settimana): <strong>${euro(costoAnno)}</strong>
      `);
    }
  </script>
