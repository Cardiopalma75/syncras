    function updateAmazonBox(testName, key) {
      const box = document.getElementById('amazon-' + testName);
      if (!box) return;

      if (!key || !AMAZON_LINKS[testName] || !AMAZON_LINKS[testName][key]) {
        box.innerHTML = '';
        return;
      }

      const info = AMAZON_LINKS[testName][key];
      box.innerHTML = `
        <strong>Dopo il test, se vuoi davvero comprare:</strong>
        <span>${info.text}</span><br>
        <a href="${info.url}" target="_blank" rel="nofollow noopener sponsored">
          Vai a vedere le offerte su Amazon
        </a>
      `;
    }

