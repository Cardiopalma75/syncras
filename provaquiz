    function valutaTestSmartphone() {
      const domande = ['s_q1', 's_q2', 's_q3', 's_q4', 's_q5'];
      let punteggio = 0;
      let risposte = 0;

      domande.forEach(function(nome) {
        const sel = document.querySelector('input[name="' + nome + '"]:checked');
        if (sel) {
          risposte++;
          punteggio += parseInt(sel.value, 10);
        }
      });

      const el = document.getElementById('risultato-smartphone');
      el.className = 'test-result';
      updateAmazonBox('smartphone', null);

      if (risposte < domande.length) {
        el.textContent = 'Completa tutte le risposte per vedere la fascia consigliata.';
        return;
      }

      const budget = document.querySelector('input[name="s_q1"]:checked').value;
      const uso    = document.querySelector('input[name="s_q2"]:checked').value;

      let fasciaKey = 'media';

      if (budget === '1' && uso === '1') {
        el.textContent = 'Per il tuo uso uno smartphone sotto i 200‚Ç¨ √® pi√π che sufficiente. Prima di cambiare, valuta se quello che hai ti limita davvero.';
        el.classList.add('result-good');
        fasciaKey = 'base';
      } else if (punteggio <= 8) {
        el.textContent = 'Fascia consigliata: smartphone base sotto 200‚Äì220‚Ç¨. Modelli semplici, batteria ok, zero fronzoli. Perfetti per chat, chiamate e qualche app.';
        el.classList.add('result-good');
        fasciaKey = 'base';
      } else if (punteggio <= 12) {
        el.textContent = 'Fascia consigliata: 200‚Äì350‚Ç¨. Equilibrio tra prestazioni, foto e batteria. Ottima zona per non buttare soldi ma avere un telefono completo.';
        el.classList.add('result-medium');
        fasciaKey = 'media';
      } else {
        el.textContent = 'Fascia consigliata: oltre 350‚Ç¨. Cerchi prestazioni alte, buon comparto foto e magari gaming. Prima di spendere cos√¨ tanto, assicurati di sfruttarlo davvero.';
        el.classList.add('result-medium');
        fasciaKey = 'alta';
      }

      updateAmazonBox('smartphone', fasciaKey);
    }

