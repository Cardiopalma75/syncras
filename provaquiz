    function valutaTestAcquisto() {
      const domande = ['a_q1', 'a_q2', 'a_q3', 'a_q4', 'a_q5', 'a_q6', 'a_q7'];
      let si = 0;
      let risposte = 0;

      domande.forEach(function(nome) {
        const sel = document.querySelector('input[name="' + nome + '"]:checked');
        if (sel) {
          risposte++;
          if (sel.value === 'si') si++;
        }
      });

      const el = document.getElementById('risultato-acquisto');
      el.className = 'test-result';

      if (risposte < domande.length) {
        el.textContent = 'Rispondi a tutte le domande per vedere il risultato.';
        return;
      }

      if (si >= 5) {
        el.textContent = 'Verde: il tuo acquisto sembra ragionato. Se il prodotto √® giusto e il prezzo √® onesto, puoi procedere piuttosto tranquillo.';
        el.classList.add('result-good');
      } else if (si >= 3) {
        el.textContent = 'Giallo: ci sono alcuni punti deboli. Forse √® meglio aspettare ancora un po‚Äô, confrontare meglio prezzi e alternative.';
        el.classList.add('result-medium');
      } else {
        el.textContent = 'Rosso: qui suona forte il campanello dell‚Äôacquisto d‚Äôimpulso. Meglio fermarsi e ripensarci tra qualche giorno.';
        el.classList.add('result-bad');
      }

      el.innerHTML +=
        '<br><br><a href="' + AMAZON_GENERIC_LINK +
        '" target="_blank" style="color:#4B3ACB;font-weight:bold;">' +
        'üîó Cerca il prodotto su Amazon</a>';
    }

