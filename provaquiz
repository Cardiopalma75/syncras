    function valutaTestLavatrice() {
      const domande = [
        'lav_q1','lav_q2','lav_q3','lav_q4','lav_q5',
        'lav_q6','lav_q7','lav_q8','lav_q9','lav_q10'
      ];

      let punteggio = 0;
      let risposte  = 0;

      domande.forEach(function(nome) {
        const sel = document.querySelector('input[name="' + nome + '"]:checked');
        if (sel) {
          risposte++;
          punteggio += parseInt(sel.value, 10);
        }
      });

      const el = document.getElementById('risultato-lavatrice');
      el.className = 'test-result';
      updateAmazonBox('lavatrice', null);

      if (risposte < domande.length) {
        el.textContent = 'Rispondi a tutte le domande per vedere il risultato.';
        return;
      }

      let key = '8-9';

      if (punteggio <= 12) {
        el.textContent = '‚û° Consigliata: lavatrice da 7‚Äì8 kg (uso leggero, nucleo piccolo, consumi bassi).';
        el.classList.add('result-good');
        key = '7-8';
      } else if (punteggio <= 18) {
        el.textContent = '‚û° Consigliata: lavatrice da 8‚Äì9 kg (equilibrata, perfetta per la maggior parte delle famiglie).';
        el.classList.add('result-medium');
        key = '8-9';
      } else if (punteggio <= 23) {
        el.textContent = '‚û° Consigliata: lavatrice da 9‚Äì10 kg (famiglie pi√π numerose, lavaggi frequenti, capi pesanti).';
        el.classList.add('result-medium');
        key = '9-10';
      } else {
        el.textContent = '‚û° Consigliata: lavatrice da 10‚Äì11 kg (piumoni matrimoniali, carichi importanti, massima praticit√†).';
        el.classList.add('result-good');
        key = '10-11';
      }

      updateAmazonBox('lavatrice', key);
    }

    /* ==============================
       TEST TV
       ============================== */

    function valutaTestTv() {
      const domande = ['t_q1', 't_q2', 't_q3', 't_q4', 't_q5', 't_q6', 't_q7'];
      let risposte = 0;

      domande.forEach(function(nome) {
        const sel = document.querySelector('input[name="' + nome + '"]:checked');
        if (sel) {
          risposte++;
        }
      });

      const el = document.getElementById('risultato-tv');
      el.className = 'test-result';
      updateAmazonBox('tv', null);

      if (risposte < domande.length) {
        el.textContent = 'Rispondi a tutte le domande per vedere il tipo di TV consigliato.';
        return;
      }

      const budget      = parseInt(document.querySelector('input[name="t_q1"]:checked').value, 10);
      const distanza    = parseInt(document.querySelector('input[name="t_q2"]:checked').value, 10);
      const luce        = parseInt(document.querySelector('input[name="t_q3"]:checked').value, 10);
      const uso         = parseInt(document.querySelector('input[name="t_q4"]:checked').value, 10);
      const sensibilita = parseInt(document.querySelector('input[name="t_q5"]:checked').value, 10);
      const velocita    = parseInt(document.querySelector('input[name="t_q6"]:checked').value, 10);
      const durata      = parseInt(document.querySelector('input[name="t_q7"]:checked').value, 10);

      let key = 'media';

      if (budget === 1 && uso === 1 && sensibilita <= 2 && velocita <= 2) {
        el.textContent = 'Per il tuo uso va benissimo una Smart TV economica: canali tradizionali e qualche app base. Non ha senso spendere molto di pi√π.';
        el.classList.add('result-good');
        key = 'economica';
        updateAmazonBox('tv', key);
        return;
      }

      let punteggioQualita = 0;
      if (uso >= 2) punteggioQualita++;
      if (sensibilita >= 2) punteggioQualita++;
      if (luce === 3) punteggioQualita++;
      if (durata >= 2) punteggioQualita++;

      if (punteggioQualita >= 2 && velocita <= 2 && budget >= 2) {
        el.textContent = 'Per le tue esigenze √® consigliata una TV di qualit√† senza per forza aggiungere un box esterno. Pannello migliore, buona resa con film e serie, software gi√† sufficiente.';
        el.classList.add('result-good');
        key = 'buona';
        updateAmazonBox('tv', key);
        return;
      }

      if (punteggioQualita >= 3 && velocita === 3 && durata >= 2 && budget >= 2) {
        el.textContent = 'Per come userai la TV, la scelta pi√π intelligente √® una TV di buona qualit√† abbinata a un box multimediale esterno. Cos√¨ hai immagini migliori oggi e una parte ‚Äúsmart‚Äù aggiornata anche tra qualche anno.';
        el.classList.add('result-medium');
        key = 'box';
        updateAmazonBox('tv', key);
        return;
      }

      if (budget === 2 && punteggioQualita >= 2) {
        el.textContent = 'Con il tuo budget e le tue esigenze puoi puntare a una TV di buona qualit√†, iniziando senza box esterno. In futuro, se il software dovesse rallentare, potrai aggiungere un box per allungarne la vita.';
        el.classList.add('result-medium');
        key = 'buona';
        updateAmazonBox('tv', key);
        return;
      }

      el.textContent = 'In base alle tue risposte, puoi orientarti su una TV di fascia media: non la pi√π economica, ma nemmeno il top assoluto. Se in futuro la parte smart dovesse diventare lenta, potrai sempre aggiungere un box esterno.';
      el.classList.add('result-medium');
      key = 'media';
      updateAmazonBox('tv', key);
    }

    /* ==============================
       TEST GIGA
       ============================== */

    function valutaTestGiga() {
      let punteggio = 0;

      for (let i = 1; i <= 5; i++) {
        const risposta = document.querySelector('input[name="giga' + i + '"]:checked');
        if (!risposta) {
          alert('Rispondi a tutte le domande del Test Giga Smartphone.');
          return;
        }
        punteggio += parseInt(risposta.value, 10);
      }

      const el = document.getElementById('giga-result');
      el.className = 'test-result';
      let messaggio = '';
      let linkAmazon = '';

      if (punteggio <= 3) {
        el.classList.add('result-good');
        messaggio =
          'Verde: usi lo smartphone in modo leggero. ' +
          'Con 64 GB te la cavi, con 128 GB vivi ancora pi√π sereno.';

        linkAmazon =
          '<br><br><a href="' + AMAZON_SMARTPHONE_64_128 +
          '" target="_blank" style="color:#4B3ACB;font-weight:bold;">' +
          'üîó Vedi smartphone 64‚Äì128 GB su Amazon</a>';

      } else if (punteggio <= 7) {
        el.classList.add('result-medium');
        messaggio =
          'Giallo: fai foto, video e usi chat e app in modo ‚Äúnormale moderno‚Äù. ' +
          '128 GB sono il punto di equilibrio giusto per te.';

        linkAmazon =
          '<br><br><a href="' + AMAZON_SMARTPHONE_64_128 +
          '" target="_blank" style="color:#4B3ACB;font-weight:bold;">' +
          'üîó Vedi smartphone 128 GB su Amazon</a>';

      } else {
        el.classList.add('result-bad');
        messaggio =
          'Rosso: sei ufficialmente un mangia-giga. Video, giochi, chat infinite‚Ä¶ ' +
          'per evitare la guerra con il messaggio ‚Äúmemoria piena‚Äù, meglio puntare su 256 GB.';

        linkAmazon =
          '<br><br><a href="' + AMAZON_SMARTPHONE_256 +
          '" target="_blank" style="color:#4B3ACB;font-weight:bold;">' +
          'üîó Vedi smartphone 256 GB su Amazon</a>';
      }

      el.innerHTML = messaggio + linkAmazon;
    }

