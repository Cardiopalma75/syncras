<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// --- LOGICA GDPR & NOTE LEGALI ---
function toggleCalc() {
  const isAccepted = document.getElementById('legalAccept').checked;
  const btn = document.getElementById('calcBtn');
  btn.disabled = !isAccepted;
  btn.style.opacity = isAccepted ? "1" : "0.5";
  if(isAccepted) document.getElementById('mainLegalWarning').style.display = 'none';
}

// Cookie Banner Logic
if (!localStorage.getItem('cookieConsent')) {
  document.getElementById('cookie-banner').style.display = 'block';
}

function acceptCookies() {
  localStorage.setItem('cookieConsent', 'accepted');
  document.getElementById('cookie-banner').style.display = 'none';
}

function rejectCookies() {
  localStorage.setItem('cookieConsent', 'rejected');
  document.getElementById('cookie-banner').style.display = 'none';
}

// --- LOGICA CALCOLATORE ---
let chart;
function runCalculation() {
  const price = parseFloat(document.getElementById('priceKwh').value);
  const days = parseInt(document.getElementById('daysMonth').value);
  let totalMonth = 0;
  let instantPower = 0;
  let roomData = {};

  document.querySelectorAll('.device-row').forEach(row => {
    const w = parseFloat(row.querySelector('.w-input').value) || 0;
    const h = parseFloat(row.querySelector('.h-input').value) || 0;
    const room = row.getAttribute('data-room');
    
    const cost = (w * h / 1000) * price * days;
    row.querySelector('.row-cost').innerText = `‚Ç¨ ${cost.toFixed(2)}`;
    
    totalMonth += cost;
    instantPower += w;
    roomData[room] = (roomData[room] || 0) + cost;
  });

  // Aggiorna UI
  document.getElementById('resultsArea').style.display = 'block';
  document.getElementById('totalDisplay').innerText = `‚Ç¨ ${totalMonth.toFixed(2)}`;
  document.getElementById('instantWatts').innerText = instantPower;
  
  // Warning Potenza
  const pStatus = document.getElementById('powerStatus');
  if(instantPower > 3300) {
    pStatus.innerText = "‚ö†Ô∏è SUPERAMENTO 3kW!";
    pStatus.className = "warning";
  } else {
    pStatus.innerText = "‚úÖ Carico OK";
    pStatus.className = "";
  }

  updateChart(roomData);
  updateShareText(totalMonth, roomData);
  window.scrollTo({ top: document.getElementById('resultsArea').offsetTop - 100, behavior: 'smooth' });
}

function updateChart(data) {
  const ctx = document.getElementById('myChart').getContext('2d');
  if (chart) chart.destroy();
  chart = new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: Object.keys(data),
      datasets: [{
        data: Object.values(data),
        backgroundColor: ['#6C5CE7', '#FAB1A0', '#55E6C1', '#FF7675']
      }]
    }
  });
}

function updateShareText(total, rooms) {
  let t = `‚ö° Ho calcolato i miei consumi su Syncras.App!\nüí∞ Totale stimato: ‚Ç¨${total.toFixed(2)}/mese\n`;
  for(let r in rooms) { t += `üìç ${r}: ‚Ç¨${rooms[r].toFixed(2)}\n`; }
  document.getElementById('shareText').value = t;
}

function copyText() {
  const box = document.getElementById('shareText');
  box.select();
  document.execCommand('copy');
  alert("Copiato negli appunti!");
}
</script>

</body>
