<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// --- CORE LOGIC ---
let chartInstance = null;

function toggleLegal() {
  const ok = document.getElementById('legalAccept').checked;
  const btn = document.getElementById('calcBtn');
  btn.disabled = !ok;
  document.getElementById('legalNag').style.display = ok ? 'none' : 'block';
}

function liveCalc() {
  const price = parseFloat(document.getElementById('priceKwh').value) || 0;
  const days = parseInt(document.getElementById('daysMonth').value) || 30;
  let instantW = 0;

  document.querySelectorAll('.dev-row').forEach(row => {
    const w = parseFloat(row.querySelector('.w-in').value) || 0;
    const h = parseFloat(row.querySelector('.h-in').value) || 0;
    const cost = (w * h / 1000) * price * days;
    row.querySelector('.cost-cell').innerText = `‚Ç¨ ${cost.toFixed(2)}`;
    instantW += w;
  });

  document.getElementById('instantWatts').innerText = instantW;
  const status = document.getElementById('powerStatus');
  if(instantW > 3300) {
    status.innerText = "‚ö†Ô∏è SUPERAMENTO 3kW";
    status.className = "warning";
  } else {
    status.innerText = "‚úÖ Carico OK";
    status.className = "";
  }
}

function generateResults() {
  const price = parseFloat(document.getElementById('priceKwh').value);
  const days = parseInt(document.getElementById('daysMonth').value);
  let grandTotal = 0;
  let roomTotals = {};

  document.querySelectorAll('.dev-row').forEach(row => {
    const w = parseFloat(row.querySelector('.w-in').value) || 0;
    const h = parseFloat(row.querySelector('.h-in').value) || 0;
    const room = row.getAttribute('data-room');
    const cost = (w * h / 1000) * price * days;
    
    grandTotal += cost;
    roomTotals[room] = (roomTotals[room] || 0) + cost;
  });

  document.getElementById('resBox').style.display = 'block';
  document.getElementById('finalTotal').innerText = `‚Ç¨ ${grandTotal.toFixed(2)}`;
  
  // Update Chart
  const ctx = document.getElementById('ctxChart').getContext('2d');
  if(chartInstance) chartInstance.destroy();
  chartInstance = new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: Object.keys(roomTotals),
      datasets: [{
        data: Object.values(roomTotals),
        backgroundColor: ['#6C5CE7', '#A29BFE', '#FAB1A0', '#55E6C1', '#FF7675']
      }]
    },
    options: { plugins: { legend: { position: 'bottom' } } }
  });

  // Share Text
  let txt = `‚ö° Analisi Consumi Syncras.App\nüí∞ Spesa Mensile: ‚Ç¨${grandTotal.toFixed(2)}\n\n`;
  for(let r in roomTotals) {
    txt += `‚ñ™Ô∏è ${r}: ‚Ç¨${roomTotals[r].toFixed(2)}\n`;
  }
  document.getElementById('shareTxt').value = txt;
  
  window.scrollTo({ top: document.getElementById('resBox').offsetTop - 50, behavior: 'smooth' });
}

// --- UTILS ---
function copyOut() {
  const t = document.getElementById('shareTxt');
  t.select();
  document.execCommand('copy');
  alert("Copiato!");
}

function handleCookie(acc) {
  localStorage.setItem('syncras_cookie', acc ? 'yes' : 'no');
  document.getElementById('cookie-banner').style.display = 'none';
}

window.onload = () => {
  if(!localStorage.getItem('syncras_cookie')) document.getElementById('cookie-banner').style.display = 'block';
  liveCalc();
  
  // Auto-save/load input values
  const inputs = document.querySelectorAll('input');
  inputs.forEach(i => {
    i.addEventListener('change', () => {
       const data = {};
       document.querySelectorAll('.dev-row').forEach((r, idx) => {
         data[idx] = { w: r.querySelector('.w-in').value, h: r.querySelector('.h-in').value };
       });
       localStorage.setItem('syncras_state', JSON.stringify(data));
    });
  });
};

function resetData() {
  if(confirm("Vuoi resettare tutti i valori?")) {
    localStorage.removeItem('syncras_state');
    location.reload();
  }
}
</script>

