<script>
  function toggleMenu() {
    document.body.classList.toggle('nav-open');
  }

  // FORMATTAZIONE EURO
  function euro(val) {
    return val.toFixed(2).replace('.', ',');
  }

  function euroInt(val) {
    // per prezzi acquisto (senza decimali)
    if (!isFinite(val)) return '';
    return Math.round(val).toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.');
  }

  function clampPercent(x){
    if (!isFinite(x)) return 0;
    return Math.max(0, Math.min(100, x));
  }

  function getDisplayName(raw, fallback) {
    const t = (raw || '').trim();
    return t.length ? t : fallback;
  }

  function updateLabels() {
    const tipoA = document.getElementById('tipoA').value;
    const tipoB = document.getElementById('tipoB').value;

    const labelConsA = document.getElementById('labelConsA');
    const labelPrezzoA = document.getElementById('labelPrezzoA');
    const labelConsB = document.getElementById('labelConsB');
    const labelPrezzoB = document.getElementById('labelPrezzoB');

    if (tipoA === 'Elettrica') {
      labelConsA.textContent = 'Consumo Auto A (kWh / 100 km)';
      labelPrezzoA.textContent = 'Prezzo energia Auto A (‚Ç¨/kWh)';
    } else {
      labelConsA.textContent = 'Consumo Auto A (litri / 100 km)';
      labelPrezzoA.textContent = 'Prezzo carburante Auto A (‚Ç¨/litro)';
    }

    if (tipoB === 'Elettrica') {
      labelConsB.textContent = 'Consumo Auto B (kWh / 100 km)';
      labelPrezzoB.textContent = 'Prezzo energia Auto B (‚Ç¨/kWh)';
    } else {
      labelConsB.textContent = 'Consumo Auto B (litri / 100 km)';
      labelPrezzoB.textContent = 'Prezzo carburante Auto B (‚Ç¨/litro)';
    }
  }

function buildShareText(payload) {
  const nameA = (payload.nomeA && payload.nomeA.trim())
    ? payload.nomeA.trim()
    : `Auto A (${payload.tipoA})`;

  const nameB = (payload.nomeB && payload.nomeB.trim())
    ? payload.nomeB.trim()
    : `Auto B (${payload.tipoB})`;

  const lines = [
    `üöó Confronto costi auto (Syncras.App)`,
    `Km considerati: ${payload.km.toLocaleString('it-IT')} km`,
    ``,
    `${nameA}`,
    `‚Ä¢ Costo per 100 km: ${payload.costo100A} ‚Ç¨`,
    `‚Ä¢ Costo totale: ${payload.costoTotA} ‚Ç¨`,
    ``,
    `${nameB}`,
    `‚Ä¢ Costo per 100 km: ${payload.costo100B} ‚Ç¨`,
    `‚Ä¢ Costo totale: ${payload.costoTotB} ‚Ç¨`,
    ``,
    `${payload.sintesi}`,
    payload.pareggioText ? payload.pareggioText : ``,
    ``,
    `Calcolatore: ${payload.url}`
  ].filter(Boolean);

  return lines.join('\n');
}


  function calcolaAuto() {
    const legalCheckbox = document.getElementById('legalAccept');
    if (legalCheckbox && !legalCheckbox.checked) {
      alert('Per usare il calcolatore devi dichiarare di aver letto e accettato le Note Legali.');

      // scroll + highlight sul box della spunta
      const box = document.getElementById('legalBox');
      if (box) {
        box.scrollIntoView({ behavior: 'smooth', block: 'center' });
        box.classList.add('legal-highlight');
        setTimeout(() => box.classList.remove('legal-highlight'), 1200);
      } else if (legalCheckbox) {
        legalCheckbox.scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
      return;
    }

    const kmTot = parseFloat(document.getElementById('kmTot').value) || 0;

    const tipoA = document.getElementById('tipoA').value;
    const consA = parseFloat(document.getElementById('consA').value) || 0;
    const prezzoA = parseFloat(document.getElementById('prezzoA').value) || 0;

    const tipoB = document.getElementById('tipoB').value;
    const consB = parseFloat(document.getElementById('consB').value) || 0;
    const prezzoB = parseFloat(document.getElementById('prezzoB').value) || 0;

    const nomeA = getDisplayName(document.getElementById('nomeA').value, 'Auto A');
    const nomeB = getDisplayName(document.getElementById('nomeB').value, 'Auto B');

    const advEnabled = document.getElementById('advancedToggle').checked;
    const prezzoAcqA = advEnabled ? (parseFloat(document.getElementById('prezzoAcquistoA').value) || 0) : 0;
    const prezzoAcqB = advEnabled ? (parseFloat(document.getElementById('prezzoAcquistoB').value) || 0) : 0;

    if (kmTot <= 0 || consA <= 0 || consB <= 0 || prezzoA <= 0 || prezzoB <= 0) {
      alert('Controlla di aver inserito tutti i valori maggiori di zero.');
      return;
    }

    // costo "carburante/energia"
    const costo100A = consA * prezzoA;
    const costoTotA = (costo100A / 100) * kmTot;

    const costo100B = consB * prezzoB;
    const costoTotB = (costo100B / 100) * kmTot;

    const diffTot = costoTotA - costoTotB; // >0 => B pi√π economica

    // percentuale risparmio (pi√π chiara per l'utente)
    let percent = 0;
    if (Math.abs(diffTot) > 0.01) {
      if (diffTot > 0) { // B pi√π economica
        percent = (diffTot / costoTotA) * 100;
      } else { // A pi√π economica
        percent = ((-diffTot) / costoTotB) * 100;
      }
    }
    percent = Math.max(0, percent);

    // sintesi principale
    let sintesi = '';
    let cheaperName = '';
    let cheaperType = '';
    let savingAbs = 0;
    if (Math.abs(diffTot) < 0.01) {
      sintesi = 'Le due auto hanno un costo molto simile sui chilometri inseriti.';
    } else if (diffTot > 0) {
      cheaperName = nomeB;
      cheaperType = tipoB;
      savingAbs = diffTot;
      sintesi = `${nomeB} (${tipoB}) √® pi√π economica: risparmio stimato ${euro(diffTot)} ‚Ç¨ sui km considerati (‚âà ${percent.toFixed(1).replace('.', ',')}%).`;
    } else {
      cheaperName = nomeA;
      cheaperType = tipoA;
      savingAbs = -diffTot;
      sintesi = `${nomeA} (${tipoA}) √® pi√π economica: risparmio stimato ${euro(-diffTot)} ‚Ç¨ sui km considerati (‚âà ${percent.toFixed(1).replace('.', ',')}%).`;
    }

    // BARRE
    const maxCosto = Math.max(costoTotA, costoTotB);
    const widthA = clampPercent((costoTotA / maxCosto) * 100);
    const widthB = clampPercent((costoTotB / maxCosto) * 100);

    // ‚úÖ PAREGGIO (ammortamento) su base ANNUA usando km inseriti
    // kmTot √® considerato "km/anno" (come da label)
    let pareggioHtml = '';
    let pareggioTextShare = '';
    if (advEnabled) {
      // se l'utente non inserisce i prezzi, non mostriamo pareggio
      const hasPrices = (prezzoAcqA > 0 || prezzoAcqB > 0);
      if (hasPrices) {
        const diffPrezzo = prezzoAcqB - prezzoAcqA; // se >0 B costa di pi√π
        const risparmioAnnuo = costoTotA - costoTotB; // se >0 B fa risparmiare

        // casi:
        // - B costa di pi√π e fa risparmiare => anni = diffPrezzo / risparmioAnnuo
        // - B costa di pi√π ma non fa risparmiare => nessun pareggio
        // - B costa meno => pareggio immediato (gi√† pi√π economica)
        // - prezzi parziali => calcolo comunque sulla differenza (se A √® 0 o B √® 0, √® solo indicativo)
        if (diffPrezzo <= 0) {
          // B costa uguale o meno
          if (diffPrezzo < 0) {
            pareggioHtml = `<div class="saving-box" style="margin-top:12px;">
              <strong>‚úÖ Pareggio prezzo d‚Äôacquisto</strong><br>
              <span style="font-size:0.9rem; color:#4b5563;">
                ${nomeB} risulta gi√† <strong>pi√π economica all‚Äôacquisto</strong> di circa <strong>${euroInt(-diffPrezzo)} ‚Ç¨</strong> (stima in base ai prezzi inseriti).
              </span>
            </div>`;
            pareggioTextShare = `‚úÖ Pareggio: ${nomeB} √® gi√† pi√π economica all‚Äôacquisto di circa ${euroInt(-diffPrezzo)} ‚Ç¨.`;
          } else {
            pareggioHtml = `<div class="saving-box" style="margin-top:12px;">
              <strong>‚úÖ Pareggio prezzo d‚Äôacquisto</strong><br>
              <span style="font-size:0.9rem; color:#4b5563;">
                I prezzi inseriti risultano <strong>uguali</strong>. In questo caso il confronto dipende solo dai costi energia/carburante.
              </span>
            </div>`;
            pareggioTextShare = `‚úÖ Pareggio: prezzi uguali (dipende solo dai costi di utilizzo).`;
          }
        } else {
          // B costa di pi√π
          if (risparmioAnnuo > 0.01) {
            const anni = diffPrezzo / risparmioAnnuo;
            const anniRounded = Math.ceil(anni * 10) / 10; // arrotonda per eccesso a 0,1
            pareggioHtml = `<div class="saving-box" style="margin-top:12px;">
              <strong>‚è≥ Pareggio prezzo d‚Äôacquisto</strong><br>
              <span style="font-size:0.9rem; color:#4b5563;">
                Differenza prezzo (B ‚àí A): <strong>${euroInt(diffPrezzo)} ‚Ç¨</strong><br>
                Risparmio annuo stimato: <strong>${euro(risparmioAnnuo)} ‚Ç¨</strong><br>
                üëâ Per recuperare la differenza servono circa <strong>${anniRounded.toString().replace('.', ',')} anni</strong> (stima).
              </span>
            </div>`;
            pareggioTextShare = `‚è≥ Pareggio: per recuperare ${euroInt(diffPrezzo)} ‚Ç¨ con un risparmio annuo di ${euro(risparmioAnnuo)} ‚Ç¨, servono ~${anniRounded.toString().replace('.', ',')} anni.`;
          } else {
            pareggioHtml = `<div class="saving-box" style="margin-top:12px;">
              <strong>‚õî Pareggio non raggiungibile</strong><br>
              <span style="font-size:0.9rem; color:#4b5563;">
                Con questi valori, ${nomeB} costa <strong>di pi√π all‚Äôacquisto</strong> (‚âà ${euroInt(diffPrezzo)} ‚Ç¨)
                ma <strong>non genera un risparmio annuo</strong> sufficiente sui km inseriti. Quindi il pareggio <strong>non si raggiunge</strong>.
              </span>
            </div>`;
            pareggioTextShare = `‚õî Pareggio: non si raggiunge (B costa di pi√π all‚Äôacquisto e non fa risparmiare sui km inseriti).`;
          }
        }
      }
    }

    // KPI per evidenziare risparmio
    const kpiHtml = `
      <div class="saving-kpi">
        <span class="kpi-pill">üìâ <small>Risparmio stimato</small> ${euro(Math.abs(diffTot))} ‚Ç¨</span>
        <span class="kpi-pill">üìä <small>Risparmio %</small> ${percent.toFixed(1).replace('.', ',')}%</span>
        <span class="kpi-pill">üóìÔ∏è <small>Mensile</small> ${euro(Math.abs(diffTot)/12)} ‚Ç¨</span>
      </div>
    `;

    const box = document.getElementById('autoResult');
    box.innerHTML = `
      <strong>üìä Risultato del confronto</strong>

      <p style="margin-top:10px;"><u>${nomeA} (${tipoA})</u><br>
      ‚Äì Costo per 100 km: <strong>${euro(costo100A)} ‚Ç¨</strong><br>
      ‚Äì Costo per ${kmTot.toLocaleString('it-IT')} km: <strong>${euro(costoTotA)} ‚Ç¨</strong></p>
      <div class="bar-container"><div class="bar-fill" style="width:${widthA}%"></div></div>

      <p><u>${nomeB} (${tipoB})</u><br>
      ‚Äì Costo per 100 km: <strong>${euro(costo100B)} ‚Ç¨</strong><br>
      ‚Äì Costo per ${kmTot.toLocaleString('it-IT')} km: <strong>${euro(costoTotB)} ‚Ç¨</strong></p>
      <div class="bar-container"><div class="bar-fill" style="width:${widthB}%"></div></div>

      <div class="saving-box">
        <strong>${sintesi}</strong>
        ${kpiHtml}
      </div>

      ${pareggioHtml}

      <p class="small-note">
        Nota: confronto solo sui costi di carburante/energia. Nella realt√† incidono anche prezzo d‚Äôacquisto, manutenzione, tasse, assicurazione, pedaggi, ecc.
      </p>
    `;
    box.style.display = 'block';
    box.scrollIntoView({ behavior: 'smooth', block: 'start' });

    // prepara testo share risultato (fallback + share)
    const payload = {
      km: kmTot,
      tipoA,
      tipoB,
      nomeA,
      nomeB,
      costo100A: euro(costo100A),
      costoTotA: euro(costoTotA),
      costo100B: euro(costo100B),
      costoTotB: euro(costoTotB),
      sintesi,
      pareggioText: pareggioTextShare,
      url: document.querySelector('link[rel="canonical"]')?.href || window.location.href

    };
    const shareText = buildShareText(payload);
    window.__syncrasLastShareText = shareText;

    const fallbackWrap = document.getElementById('shareFallback');
    const shareInput = document.getElementById('shareText');
    if (shareInput) shareInput.value = shareText;
    if (fallbackWrap) fallbackWrap.style.display = 'flex';
  }

  // SHARE pagina + risultato (con fallback copia)
  function sharePage() {
    const title = 'Confronto consumi e costi auto ‚Äì Syncras.App';
    const text = 'Ho trovato un calcolatore per confrontare i costi tra due auto (benzina, diesel, GPL, metano o elettrico).';
    const url = document.querySelector('link[rel="canonical"]')?.href || window.location.href;

    if (navigator.share) {
      navigator.share({ title, text, url }).catch(() => {});
    } else {
      // fallback: copia URL
      navigator.clipboard.writeText(url).then(() => alert('Link copiato! Incollalo su WhatsApp/Telegram.'));
    }
  }

 function shareResult() {
  const title = 'Risultato confronto costi auto ‚Äì Syncras.App';
  const text = window.__syncrasLastShareText || '';
  const url = document.querySelector('link[rel="canonical"]')?.href || window.location.href;

  const resultBox = document.getElementById('autoResult');
  const hasResultVisible = !!(resultBox && resultBox.offsetParent !== null);

  if (!text && !hasResultVisible) {
    alert('Prima calcola un confronto, poi puoi condividere il risultato.');
    return;
  }

  // WhatsApp mostra anteprima OG solo se c'√® un URL: lo mettiamo UNA SOLA VOLTA
  const shareText = text ? `${text}\n\n${url}` : url;

  if (navigator.share) {
    navigator.share({ title, text: shareText }).catch(() => {});
  } else {
    const fallbackWrap = document.getElementById('shareFallback');
    if (fallbackWrap) fallbackWrap.style.display = 'flex';
    const shareInput = document.getElementById('shareText');
    if (shareInput) {
      shareInput.value = shareText;
      shareInput.focus();
    }
    alert('Il tuo browser non supporta la condivisione diretta: copia il testo del risultato e incollalo su WhatsApp/Telegram.');
  }
}



    

  document.addEventListener('DOMContentLoaded', function() {
    // footer year
    const span = document.getElementById('year-span');
    if (span) span.textContent = new Date().getFullYear();

    // labels iniziali + listener
    updateLabels();
    document.getElementById('tipoA').addEventListener('change', updateLabels);
    document.getElementById('tipoB').addEventListener('change', updateLabels);

    // avanzato toggle
    const advToggle = document.getElementById('advancedToggle');
    const advContent = document.getElementById('advancedContent');
    if (advToggle && advContent) {
      advToggle.addEventListener('change', () => {
        advContent.classList.toggle('show', advToggle.checked);
      });
    }

    // share buttons
    const sharePageBtn = document.getElementById('sharePageBtn');
    const shareResultBtn = document.getElementById('shareResultBtn');
    if (sharePageBtn) sharePageBtn.addEventListener('click', sharePage);
    if (shareResultBtn) shareResultBtn.addEventListener('click', shareResult);

    // copy fallback
    const copyBtn = document.getElementById('copyBtn');
    if (copyBtn) {
      copyBtn.addEventListener('click', () => {
        const shareInput = document.getElementById('shareText');
        if (!shareInput) return;
        navigator.clipboard.writeText(shareInput.value).then(() => {
          alert('Testo copiato! Ora incollalo su WhatsApp/Telegram.');
        });
      });
    }
  });
</script>

<!-- Cookie Banner + Blocco Google Analytics ‚Äì Versione GDPR Perfetta -->
<div id="cookie-banner">
  <p>
    Usiamo cookie tecnici e dati anonimi per migliorare il sito e misurare le visite (Google Analytics).
    Alcuni link potrebbero essere di affiliazione.
    Per dettagli leggi la <a href="cookie.html">Cookie Policy</a> e la <a href="privacy.html">Privacy Policy</a>.
  </p>
  <div style="display:flex; gap:10px; margin-top:8px;">
    <button type="button" onclick="rejectCookies()">Rifiuta</button>
    <button id="cookie-btn" type="button" onclick="acceptCookies()">Accetta e continua</button>
  </div>
</div>

<script>
  (function () {
    // üëâ ID Google Analytics di Tiziana
    const GA_ID = 'G-CFTTCYDZ2P';
    const CONSENT_KEY = "syncras_cookie_consent";

    function loadGoogleAnalytics() {
      if (window.__tizianaGaLoaded) return;
      window.__tizianaGaLoaded = true;

      const gaScript = document.createElement('script');
      gaScript.async = true;
      gaScript.src = 'https://www.googletagmanager.com/gtag/js?id=' + GA_ID;
      document.head.appendChild(gaScript);

      window.dataLayer = window.dataLayer || [];
      function gtag(){ dataLayer.push(arguments); }
      window.gtag = gtag;
      gtag('js', new Date());
      gtag('config', GA_ID, { anonymize_ip: true });
    }

    function showBanner() {
      const banner = document.getElementById('cookie-banner');
      if (banner) banner.style.display = 'block';
    }

    function hideBanner() {
      const banner = document.getElementById('cookie-banner');
      if (banner) banner.style.display = 'none';
    }

    window.acceptCookies = function () {
      localStorage.setItem(CONSENT_KEY, 'yes');
      hideBanner();
      loadGoogleAnalytics();
    };

    window.rejectCookies = function () {
      localStorage.setItem(CONSENT_KEY, 'no');
      hideBanner();
    };

    document.addEventListener('DOMContentLoaded', function () {
      const consent = localStorage.getItem(CONSENT_KEY);

      if (consent === 'yes') {
        loadGoogleAnalytics();
      } else if (consent === 'no') {
        // niente GA, niente banner
      } else {
        showBanner();
      }
    });
  })();
</script>

</body>
</html>

