  <script>
    function toggleMenu() {
      document.body.classList.toggle('nav-open');
    }

    function shareTest() {
      const testUrl = 'https://syncras.app/quiz.html';
      const text = 'Stai per spendere altri soldi, VERO? Fidati: fai prima il test. Prova il Test SmartShop Anti-Acquisto su Syncras.App.';
      if (navigator.share) {
        navigator.share({
          title: 'Test Anti-Acquisto Syncras',
          text: text,
          url: testUrl
        }).catch(() => {});
      } else if (navigator.clipboard) {
        navigator.clipboard.writeText(testUrl).then(function () {
          alert('Link del test copiato. Incollalo in WhatsApp, Telegram o dove vuoi.');
        }).catch(function () {
          window.prompt('Copia il link del test:', testUrl);
        });
      } else {
        window.prompt('Copia il link del test:', testUrl);
      }
    }

    // Anno automatico nel footer
    document.addEventListener('DOMContentLoaded', function() {
      var span = document.getElementById('year-span');
      if (span) {
        span.textContent = new Date().getFullYear();
      }
    });

    // Caricamento ultime guide dal blog
    fetch('blog.html')
      .then(response => response.text())
      .then(html => {
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');

        // Prendi i primi 3 articoli dal blog
        const cards = Array.from(doc.querySelectorAll('.post-card')).slice(0, 3);

        const container = document.getElementById('latest-guides');
        if (!container) return;

        cards.forEach(card => {
          const link = card.querySelector('a');
          const title = card.querySelector('h3')?.innerText || "";
          const meta = card.querySelector('.post-meta')?.innerText || "";
          const desc = card.querySelector('p')?.innerText || "";

          const li = document.createElement('li');
          li.className = 'post-card';

          li.innerHTML = `
            <a class="post-card-link" href="${link.getAttribute('href')}">
              <div class="post-thumb"></div>
              <div class="post-content">
                <h3>${title}</h3>
                <div class="post-meta">${meta}</div>
                <p>${desc}</p>
              </div>
            </a>
          `;

          container.appendChild(li);
        });
      })
      .catch(error => console.error('Errore caricamento ultime guide:', error));
  </script>

