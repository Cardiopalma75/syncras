<script>
  // =========================
  // 1) Autoconsumo dinamico
  // =========================
  function calcolaQuotaAutoconsumoDinamica(produzioneAnnua, batteriaKwh, consumoAnnuo, carichiSpostabiliKwhG){
    produzioneAnnua = Math.max(0, Number(produzioneAnnua) || 0);
    consumoAnnuo = Math.max(0, Number(consumoAnnuo) || 0);
    batteriaKwh = Math.max(0, Number(batteriaKwh) || 0);
    carichiSpostabiliKwhG = Math.max(0, Number(carichiSpostabiliKwhG) || 0);

    if (produzioneAnnua <= 0) {
      return { quota:0, prodG:0, consG:0, autocG:0, battG:0, quotaBase:0, spostabiliKwhG:0 };
    }

    const prodG = produzioneAnnua / 365; // kWh/g
    const consG = consumoAnnuo / 365;    // kWh/g

    // Base (0.18..0.38): se consumo‚âàproduzione sale, se FV √® enorme scende
    const rapportoConsProd = (produzioneAnnua > 0) ? (consumoAnnuo / produzioneAnnua) : 0;
    let quotaBase = 0.18 + 0.18 * Math.min(1, rapportoConsProd);
    quotaBase = Math.min(quotaBase, 0.38);

    const baseKwhG = Math.min(prodG * quotaBase, consG);

    // Carichi spostabili: limitati da consumo residuo e surplus FV residuo
    const spostabiliKwhG = Math.min(
      carichiSpostabiliKwhG,
      Math.max(0, consG - baseKwhG),
      Math.max(0, prodG - baseKwhG)
    );

    const autocGiorno = baseKwhG + spostabiliKwhG;

    // Batteria: saturazione rispetto a prodG
    const ratio = (prodG > 0) ? (batteriaKwh / prodG) : 0;
    const sat = Math.tanh(ratio);
    const battCaricabileG = batteriaKwh * 0.90 * sat;

    const surplusDopoGiorno = Math.max(0, prodG - autocGiorno);
    const consumoResiduo = Math.max(0, consG - autocGiorno);

    const autocBatteria = Math.min(battCaricabileG, surplusDopoGiorno, consumoResiduo);

    const autocTotG = autocGiorno + autocBatteria;

    let quota = (prodG > 0) ? (autocTotG / prodG) : 0;

    quota = Math.min(quota, 0.92); // cap realistico
    if (consumoAnnuo > 0) quota = Math.min(quota, consumoAnnuo / produzioneAnnua); // non oltre i consumi reali
    quota = Math.max(0, Math.min(1, quota));

    return { quota, prodG, consG, autocG:autocTotG, battG:autocBatteria, quotaBase, spostabiliKwhG };
  }

  // =========================
  // 2) Semaforo bilanciamento (score)
  // =========================
  function scoreBilanciamento(produzioneAnnua, consumoAnnuo, batteriaKwh){
    produzioneAnnua = Math.max(0, Number(produzioneAnnua)||0);
    consumoAnnuo = Math.max(0, Number(consumoAnnuo)||0);
    batteriaKwh = Math.max(0, Number(batteriaKwh)||0);

    const consG = (consumoAnnuo>0) ? (consumoAnnuo/365) : 0;

    // FV vs consumi
    const rFV = (consumoAnnuo>0) ? (produzioneAnnua/consumoAnnuo) : 99;

    // Batteria target: ~0.6 * consumo giornaliero
    const battTarget = Math.max(0.1, consG * 0.6);
    const rB = batteriaKwh / battTarget;

    let pFV = 0;
    if (rFV > 2.2) pFV = Math.min(45, (rFV - 2.2) * 18);
    else if (rFV < 0.7) pFV = Math.min(35, (0.7 - rFV) * 70);

    let pB = 0;
    if (rB > 2.0) pB = Math.min(45, (rB - 2.0) * 18);
    else if (rB < 0.4) pB = Math.min(25, (0.4 - rB) * 60);

    let bonus = 0;
    if (rFV>=1 && rFV<=1.7) bonus += 8;
    if (rB>=0.7 && rB<=1.6) bonus += 8;

    const raw = 100 - pFV - pB + bonus;
    return Math.max(0, Math.min(100, Math.round(raw)));
  }

  function colorFromScore(s){
    const h = (s/100)*120; // 0=rosso, 120=verde
    return `hsl(${h} 75% 45%)`;
  }
  function badgeText(s){
    if (s >= 80) return "‚úÖ Bilanciato";
    if (s >= 55) return "‚ö†Ô∏è Quasi";
    return "‚õî Sbilanciato";
  }

  function buildTips(produzioneAnnua, consumoAnnuo, batteriaKwh){
    const tips = [];
    const rFV = (consumoAnnuo>0) ? (produzioneAnnua/consumoAnnuo) : 99;

    const consG = (consumoAnnuo>0) ? (consumoAnnuo/365) : 0;
    const battTarget = Math.max(0.1, consG * 0.6);
    const rB = (battTarget>0) ? (batteriaKwh / battTarget) : 0;

    if (rFV > 2.2) tips.push("FV molto grande rispetto ai consumi: tanta energia finir√† ceduta in rete. Per aumentare l‚Äôautoconsumo: sposta carichi di giorno (slider) o aumenta consumi utili (EV/PDC).");
    if (rFV < 0.7) tips.push("FV piccolo rispetto ai consumi: autoconsumo % alto ma risparmio limitato dalla produzione. Potresti essere sottodimensionato.");
    if (rB > 2.0) tips.push("Batteria probabilmente eccessiva per i tuoi consumi giornalieri: migliora poco il risultato, ma costa tanto.");
    if (rB < 0.4 && produzioneAnnua>0) tips.push("Batteria piccola: ok, ma il surplus (soprattutto estivo) scapper√† in rete. Se vuoi pi√π sera/notte, aumenta moderatamente l‚Äôaccumulo.");

    if (!tips.length) tips.push("Configurazione plausibile: ora la differenza la fa la disciplina nel far lavorare i carichi nelle ore di sole (slider).");
    return tips;
  }

  // =========================
  // 3) Ottimizzatore (range consigliato) basato su consumi + obiettivo
  // =========================
  function clamp(n, a, b){ return Math.max(a, Math.min(b, n)); }

  function computeRecommended(consumoAnnuo, zonaKwhPerKw, goal){
    consumoAnnuo = Math.max(0, Number(consumoAnnuo)||0);
    zonaKwhPerKw = Math.max(1, Number(zonaKwhPerKw)||1300);
    goal = clamp(Number(goal)||0, 0, 100);

    const consG = consumoAnnuo / 365;

    // target FV: copertura consumi (0.85..1.25) in base al goal
    const cover = 0.85 + (goal/100) * 0.40; // 0.85 -> 1.25
    const prodTarget = consumoAnnuo * cover;

    // kW FV suggeriti: con una tolleranza (range)
    const kwCenter = (zonaKwhPerKw>0) ? (prodTarget / zonaKwhPerKw) : 0;
    const kwMin = Math.max(0, kwCenter * 0.85);
    const kwMax = Math.max(0, kwCenter * 1.15);

    // batteria target: 0.6..1.2 x consumo giornaliero (in base al goal)
    const battFactor = 0.6 + (goal/100) * 0.6; // 0.6 -> 1.2
    const battCenter = consG * battFactor;

    const battMin = Math.max(0, battCenter * 0.75);
    const battMax = Math.max(0, battCenter * 1.35);

    // valore applicabile (un singolo ‚Äúpunto‚Äù sensato)
    const kwApply = kwCenter;
    const battApply = battCenter;

    return {
      kwMin, kwMax, kwApply,
      battMin, battMax, battApply,
      prodTarget
    };
  }

  function goalLabel(g){
    if (g <= 20) return "Risparmio ‚Ç¨";
    if (g <= 60) return "Equilibrio";
    return "Indipendenza";
  }

  // =========================
  // UI
  // =========================
  const elCons = document.getElementById('cons');
  const elKw = document.getElementById('kw');
  const elZona = document.getElementById('zona');
  const elBatt = document.getElementById('batt');
  const elShift = document.getElementById('shift');
  const elGoal = document.getElementById('goal');

  const elProdOut = document.getElementById('prodOut');
  const elGoalTxt = document.getElementById('goalTxt');
  const elRangeText = document.getElementById('rangeText');

  const elShiftVal = document.getElementById('shiftVal');
  const elBadge = document.getElementById('badge');
  const elBar = document.getElementById('bar');
  const elTips = document.getElementById('tips');
  const elQuota = document.getElementById('quota');
  const elDetails = document.getElementById('details');

  let __lastReco = null;

  function render(){
    const consumo = Number(elCons.value)||0;
    const kw = Number(elKw.value)||0;
    const zona = Number(elZona.value)||1300;
    const batteria = Number(elBatt.value)||0;
    const shift = Number(elShift.value)||0;
    const goal = Number(elGoal.value)||0;

    elShiftVal.textContent = shift.toFixed(1);
    elGoalTxt.textContent = goalLabel(goal);

    // Produzione stimata
    const produzione = kw * zona;
    elProdOut.textContent = Math.round(produzione).toLocaleString('it-IT');

    // Range consigliato
    const rec = computeRecommended(consumo, zona, goal);
    __lastReco = rec;

    elRangeText.innerHTML = `
      In base a <strong>${Math.round(consumo).toLocaleString('it-IT')} kWh/anno</strong> e zona <strong>${zona}</strong>:<br>
      ‚Ä¢ FV consigliato: <strong>${rec.kwMin.toFixed(1).replace('.',',')} ‚Äì ${rec.kwMax.toFixed(1).replace('.',',')} kW</strong> (punto ‚Äúsensato‚Äù: ${rec.kwApply.toFixed(1).replace('.',',')} kW)<br>
      ‚Ä¢ Batteria consigliata: <strong>${rec.battMin.toFixed(1).replace('.',',')} ‚Äì ${rec.battMax.toFixed(1).replace('.',',')} kWh</strong> (punto ‚Äúsensato‚Äù: ${rec.battApply.toFixed(1).replace('.',',')} kWh)
      <div class="muted" style="margin-top:8px;">
        Se vai troppo fuori range, il bilanciamento scende e la barra va verso il rosso.
      </div>
    `;

    // Calcolo autoconsumo dinamico
    const r = calcolaQuotaAutoconsumoDinamica(produzione, batteria, consumo, shift);
    const quotaPerc = Math.round(r.quota * 100);

    // Semaforo
    const s = scoreBilanciamento(produzione, consumo, batteria);
    const col = colorFromScore(s);

    elBadge.textContent = badgeText(s);
    elBadge.style.background = col;

    elBar.style.width = s + "%";
    elBar.style.background = col;

    // Tips
    const tips = buildTips(produzione, consumo, batteria);
    elTips.innerHTML = tips.map(t => `<li>${t}</li>`).join("");

    // Output (super leggibile: niente ratio)
    elQuota.textContent = quotaPerc + "%";
    elDetails.innerHTML = `
      <div style="margin-top:8px;">
        Produzione stimata: <strong>${Math.round(produzione).toLocaleString('it-IT')} kWh/anno</strong> ¬∑
        Consumo: <strong>${Math.round(consumo).toLocaleString('it-IT')} kWh/anno</strong><br>
        Autoconsumo stimato: <strong>${r.autocG.toFixed(1)} kWh/g</strong>
        (batteria: <strong>${r.battG.toFixed(1)} kWh/g</strong>)<br>
        Quota base: <strong>${Math.round(r.quotaBase*100)}%</strong> ¬∑ Carichi spostati: <strong>${r.spostabiliKwhG.toFixed(1)} kWh/g</strong>
      </div>
    `;

    // testo copy (test)
    window.__shareText = [
      "‚òÄÔ∏è Test FV Syncras (stima dinamica - versione B)",
      `Consumo: ${Math.round(consumo)} kWh/anno`,
      `FV: ${kw.toFixed(1).replace('.',',')} kW ¬∑ Zona: ${zona} kWh/kW`,
      `Produzione stimata: ${Math.round(produzione)} kWh/anno`,
      `Batteria: ${batteria.toFixed(1).replace('.',',')} kWh`,
      `Carichi spostabili: ${shift.toFixed(1).replace('.',',')} kWh/g`,
      `Obiettivo: ${goalLabel(goal)} (${goal}%)`,
      `Quota autoconsumo stimata: ${quotaPerc}%`,
      `Bilanciamento: ${badgeText(s)}`
    ].join("\n");
  }

  // Applica suggerimento
  document.getElementById('applyBtn').addEventListener('click', () => {
    if (!__lastReco) return;
    elKw.value = __lastReco.kwApply.toFixed(1);
    elBatt.value = __lastReco.battApply.toFixed(1);
    render();
  });

  [elCons, elKw, elZona, elBatt, elShift, elGoal].forEach(el => el.addEventListener('input', render));

  // Copy / reset
  document.getElementById('copyBtn').addEventListener('click', async () => {
    const txt = window.__shareText || "Nessun risultato.";
    try{
      await navigator.clipboard.writeText(txt);
      alert("Testo copiato ‚úÖ");
    }catch(e){
      alert("Clipboard non disponibile: copia manualmente.");
    }
  });

  document.getElementById('resetBtn').addEventListener('click', () => {
    elCons.value = 3000;
    elKw.value = 6;
    elZona.value = 1300;
    elBatt.value = 10;
    elShift.value = 3;
    elGoal.value = 25;
    render();
  });

  render();
</script>
</body>
</html>

