<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- =========================
       META VARIABILI (CAMBIA QUI)
       ========================= -->
  <title>TITOLO PAGINA | Syncras.App</title>
  <meta name="description" content="Descrizione SEO della pagina.">
  <meta name="robots" content="index,follow">

  <!-- =========================
       CSS UNICO SYNCRAS
       ========================= -->
  <link rel="stylesheet" href="/css/syncras.css">
</head>

<body>

  <!-- =========================
       HEADER (CENTRALIZZATO)
       ========================= -->
  <div id="site-header"></div>

  <!-- =========================
       CONTENUTO PAGINA
       ðŸ‘‰ QUI CAMBI SOLO QUESTO
       ========================= -->
  <main>
    <!-- CONTENUTO SPECIFICO PAGINA -->
  </main>

  <!-- =========================
       FOOTER + GDPR (CENTRALIZZATI)
       ========================= -->
  <div id="site-footer"></div>
  <div id="site-gdpr"></div>

  <!-- =========================
       JS UNICO SYNCRAS
       (menu + share + binding)
       ========================= -->
  <script src="/js/syncras.js"></script>

  <!-- =========================
       CARICAMENTO COMPONENTI
       + INIZIALIZZAZIONE
       ========================= -->
  <script>
    Promise.all([
      fetch("/header.html")
        .then(r => r.text())
        .then(t => document.getElementById("site-header").innerHTML = t),

      fetch("/footer.html")
        .then(r => r.text())
        .then(t => document.getElementById("site-footer").innerHTML = t),

      fetch("/gdpr.html")
        .then(r => r.text())
        .then(t => document.getElementById("site-gdpr").innerHTML = t),
    ]).then(() => {

      /* menu + share + link footer */
      if (window.__syncrasBindAll) {
        window.__syncrasBindAll();
      }

      /* GDPR: mostra banner o carica GA */
      if (window.__syncrasInitGdpr) {
        window.__syncrasInitGdpr();
      }

    }).catch(err => {
      console.error("Errore caricamento componenti Syncras:", err);
    });
  </script>

</body>
</html>



